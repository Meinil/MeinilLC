<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="coreInfo" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="730.0" spacing="20.0" styleClass="core-info" stylesheets="@../../css/Main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meinil.mc.serverlc.controller.CoreInfoController">
   <children>
      <ImageView fx:id="iconImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../img/spigot.png" />
         </image>
      </ImageView>
      <Label fx:id="versionText" prefWidth="60.0" />
      <Label fx:id="sizeText" prefWidth="60.0" />
      <Button fx:id="downloadBtn" mnemonicParsing="false" onMouseReleased="#onDownloadAction" text=" 下载">
         <graphic>
            <Region prefHeight="200.0" prefWidth="200.0" />
         </graphic>
         <styleClass>
            <String fx:value="icon-btn" />
            <String fx:value="download-btn" />
         </styleClass>
      </Button>
      <Button fx:id="removeBtn" mnemonicParsing="false" onMouseReleased="#onRemoveCoreAction" text=" 移除">
         <graphic>
            <Region prefHeight="23.0" prefWidth="23.0" />
         </graphic>
         <styleClass>
            <String fx:value="icon-btn" />
            <String fx:value="remove" />
         </styleClass>
      </Button>
      <Button fx:id="startBtn" mnemonicParsing="false" onMouseReleased="#onStartAction" text=" 启动">
         <graphic>
            <Region prefHeight="200.0" prefWidth="200.0" />
         </graphic>
         <styleClass>
            <String fx:value="icon-btn" />
            <String fx:value="start" />
         </styleClass>
      </Button>
   </children>
   <padding>
      <Insets left="30.0" />
   </padding>
</HBox>
